{% extends 'base.html.twig' %}

{% block body %}
    <h2>Ultimos Registros </h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>Group Company Name</th>
            <th>Description</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for gcompany in gcompanies %}
            <tr>
                <th scope="row">{{ gcompany.id }}</th>
                <td>{{ gcompany.name }}</td>
                <td>{{ gcompany.description }}</td>
                <td>
                    <a href="/gcompany/details/{{ gcompany.id }}" class="btn btn-success">View</a>
                    <a href="/gcompany/edit/{{ gcompany.id }}" class="btn btn-defaults">Edit</a>
                    <a href="/gcompany/delete/{{ gcompany.id }}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="/gcompany/create"><button type="button" class="btn btn-default btn-lg active">Create Group Company</button></a>
{% endblock %}